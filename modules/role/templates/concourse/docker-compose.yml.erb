version: '3'

services:
  db:
    image: postgres
    environment:
      POSTGRES_DB: concourse
      POSTGRES_USER: dev
      POSTGRES_PASSWORD: dev
    volumes:
     - /data/concourse/postgres-data:/var/lib/postgresql/data

  web:
    image: concourse/concourse:5
    command: web
    links: [db]
    depends_on: [db]
    ports: ["8080:8080"]
    volumes: ["./keys/web:/concourse-keys"]
    environment:
      CONCOURSE_POSTGRES_HOST: db
      CONCOURSE_POSTGRES_USER: dev
      CONCOURSE_POSTGRES_PASSWORD: dev
      CONCOURSE_POSTGRES_DATABASE: concourse
      CONCOURSE_EXTERNAL_URL: https://ci.go2tech.de
      CONCOURSE_GITHUB_CLIENT_ID: <%= scope().call_function('hiera', ['concourse::github::client_id']) %>
      CONCOURSE_GITHUB_CLIENT_SECRET: <%= scope().call_function('hiera', ['concourse::github::client_secret']) %>
      CONCOURSE_MAIN_TEAM_GITHUB_ORG: droidwiki
    dns:
      - 8.8.8.8
      - 8.8.4.4

  worker:
    image: concourse/concourse:5
    command: worker
    privileged: true
    links: [web]
    depends_on: [web]
    volumes: ["./keys/worker:/concourse-keys"]
    environment:
      CONCOURSE_TSA_HOST: web:2222
      CONCOURSE_GARDEN_DNS_SERVER: 8.8.8.8
      CONCOURSE_BAGGAGECLAIM_DRIVER: overlay
    dns:
      - 8.8.8.8
      - 8.8.4.4
